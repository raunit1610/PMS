# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection (replace with your actual MongoDB connection string)
MONGODB_URI=mongodb://localhost:27017/pms-db
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT Secret (for authentication - generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Keys (if needed)
# API_KEY=your-api-key-here
